---
import Base from '@layouts/Base.astro'
import Card from '@components/Card.astro'
import Header from '@components/Header.astro'

const allPosts = await Astro.glob('../content/tips/*.md')

console.log(allPosts)
---

<Base title="Welcome to Astro." description="Test page">
	<Header title="AstroBuild.tips" />

	<main>
		<div class="max-w-screen-xl px-4 py-8 mx-auto sm:px-6 sm:py-12 lg:px-8">
			<ul class="grid gap-4 mt-8 sm:grid-cols-2 lg:grid-cols-4">
				{
					allPosts.map((item) => (
						/*
          Optional Chaining ?. para que no rompa si el diccionario no tiene los datos requeridos
          // TODO: frontmatter no tiene slug aqu√≠, ver como hacer con el tutorial q tengo
          */ <Card
							title={item?.frontmatter?.title}
							image={item?.frontmatter?.image}
							time={item?.frontmatter?.date}
							tags={item?.frontmatter?.tags}
							slug={item?.frontmatter?.url}
						/>
					))
				}
			</ul>
		</div>
	</main>
</Base>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
